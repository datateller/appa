<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_detail_footer"
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:gravity="center_horizontal">
	<ViewSwitcher
    	android:id="@+id/question_detail_foot_viewswitcher" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	
    	<LinearLayout
			android:orientation="horizontal" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:background="@drawable/widget_bar_bg_n">
			<ImageView 
				android:id="@+id/question_detail_footbar_favorite"
				style="@style/main_footbar_image"
				android:src="@drawable/widget_bar_favorite"/>
			<ImageView
				style="@style/main_footbar_cutline"
				android:src="@drawable/widget_bar_cut_off"/>
			<!-- 弹出操作菜单 -->
			<ImageView
				android:id="@+id/question_detail_footbar_option"
				style="@style/main_footbar_image"
				android:src="@drawable/widget_bar_option"/>
		</LinearLayout>
	</ViewSwitcher>
</LinearLayout>
